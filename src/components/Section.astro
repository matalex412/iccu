---
interface Props {
  lightBackground?: boolean;
  additionalClass?: string;
}

const { lightBackground, additionalClass = "" }: Props =
  Astro.props;
---

<div class={lightBackground ? "bg-leaf-50" : "bg-leaf-500"}>
  <div
    class={"max-w-screen-xl text-lg p-6 w-full flex flex-col gap-3 mx-auto md:flex-row items-center justify-center md:gap-6 " +
      additionalClass}
  >
    <slot />
  </div>
</div>
