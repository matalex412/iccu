---
import Layout from "../layouts/Layout.astro";
import EventCard from "../components/EventCard.astro";
import { Image } from "astro:assets";
import groupImage from "../assets/iccu1.jpeg";
---

<Layout title="Imperial College Christian Union">
  <div class="bg-leaf-500">
    <div
      class="max-w-screen-xl text-lg p-6 w-full flex flex-col gap-3 md:text-2xl md:flex-row md:flex md:items-center md:justify-around mx-auto"
    >
      <div class="flex items-center justify-center flex-1">
        <Image
          src={groupImage}
          alt="Group photo"
          width="500"
        />
      </div>
      <p class="flex-1 text-center">
        We are a community of Christians sharing the good
        news of Jesus Christ at Imperial College!
      </p>
    </div>
  </div>
  <div class="bg-gray-50">
    <div
      class="max-w-screen-xl text-lg p-6 w-full flex flex-col gap-3 md:text-2xl md:flex-row md:flex md:justify-around mx-auto md:gap-6"
    >
      <EventCard
        title="Hub"
        description="Worship, learning and prayer focused on our CU vision. If you're already a Christian, this is the place to start!"
        path=""
        time="Thursday 6pm"
        location="RSM G20"
      />
      <EventCard
        title="Skeptical"
        description="Exploring deep questions through short lunchtime events. Bring your friends!"
        path=""
        notWeekly
        time="Friday 12-1pm"
        location="Union Meeting Room 1"
      />
      <EventCard
        title="Curious"
        description="A Bible study open to anyone and everyone, exploring the basics of the Christian faith."
        path=""
        time="Monday 12pm"
        location="tbd"
      />
    </div>
  </div>
</Layout>
